source 'https://rubygems.org'

# Gem to help with automating code review
# http://danger.systems
gem 'danger'

# Used to run SwiftLint on CI and post comments
# https://github.com/ashfurrow/danger-swiftlint
gem 'danger-swiftlint'

# Used to get the output of xcodebuild and format it,
# so we can post build errors and warnings onto the project.
# https://github.com/diogot/danger-xcode_summary
# https://github.com/supermarin/xcpretty
# https://github.com/marcelofabri/xcpretty-json-formatter
gem 'danger-xcode_summary'
gem 'xcpretty'
gem 'xcpretty-json-formatter'
